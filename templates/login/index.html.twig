{% extends 'base.html.twig' %}

{% block stylesheets %}
	{{ encore_entry_link_tags('login') }}
{% endblock %}

{% block title %}Welcome back !
{% endblock %}

{% block body %}
	<main class="login">
		<h1>{{ controller_name }}</h1>
		<span class="login__details">Please input your login details to gain access.</span>
        <form action="" class="login__form">
            <input type="email" class="input__email" placeholder="Enter your login email">
            <input type="password" class="input__pwd" placeholder="Enter your password">
            <input type="submit" class="form__btn" value="Log in">
        </form>
	</main>

{% endblock %}

